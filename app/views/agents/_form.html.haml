= form_with(model: agent) do |form|
  - if agent.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(agent.errors.count, "error")
        prohibited this agent from being saved:
      %ul
        - agent.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :team_id, style: "display: block"
    = form.text_field :team_id
  %div
    = form.submit
